{
  "controller": {
    "host": "0.0.0.0",
    "port": 6653,
    "wsgi_port": 8080,
    "name": "SDN-NIDPS-Controller"
  },
  "database": {
    "url": "sqlite:///logs/nidps.db",
    "pool_size": 10,
    "echo": false
  },
  "suricata": {
    "eve_log": "/var/log/suricata/eve.json",
    "rules_path": "/etc/suricata/rules",
    "enabled": true,
    "update_interval": 3600
  },
  "dashboard": {
    "host": "0.0.0.0",
    "port": 5000,
    "debug": false,
    "threaded": true
  },
  "detection": {
    "enable_ml": true,
    "model_path": "models/traffic_classifier.pkl",
    "threshold": 0.7,
    "port_scan_threshold": 10,
    "connection_threshold": 100
  },
  "monitoring": {
    "metrics_interval": 5,
    "enable_prometheus": false,
    "prometheus_port": 8000
  },
  "security": {
    "enable_tls": false,
    "certificate_path": "/etc/ssl/certs/controller.pem",
    "key_path": "/etc/ssl/private/controller.key",
    "require_auth": false
  },
  "network": {
    "default_topology": "simple",
    "controller_ip": "127.0.0.1",
    "controller_port": 6653
  },
  "policies": {
    "auto_block_critical": true,
    "block_duration": 3600,
    "rate_limit_enabled": true,
    "max_packets_per_second": 10000
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_file": "logs/nidps.log",
    "max_bytes": 10485760,
    "backup_count": 5
  }
}
